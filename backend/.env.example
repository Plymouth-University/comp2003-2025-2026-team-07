# Database Configuration
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@127.0.0.1:5433/oshen_alerts?schema=public"

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Authentication
JWT_SECRET="oshen_jwt_secret_key_change_in_production"
JWT_EXPIRES_IN="24h"

# CORS Configuration
FRONTEND_URL="http://localhost:5173"

# Oshen External API Configuration
# Get your API key from Oshen Ltd
OSHEN_API_BASE_URL="https://mission.oshendata.com/papi"
OSHEN_API_KEY="your_oshen_api_key_here"

# Data Fetcher Service
# Set to 'true' to automatically fetch live data from Oshen API
ENABLE_DATA_FETCHER=false
# How often to fetch data (in minutes)
DATA_FETCH_INTERVAL_MINS=5

# Admin Credentials (for initial setup)
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="your_admin_password_here"

# Paging Configuration (optional)
PAGE_API_URL="https://www.pagem.com/api/v2/page/send"
PAGE_AUTH_TOKEN="your_page_auth_token_here"